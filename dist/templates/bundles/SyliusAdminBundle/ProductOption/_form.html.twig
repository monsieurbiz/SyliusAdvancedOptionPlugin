{% from '@SyliusAdmin/Macro/translationForm.html.twig' import translationForm %}

{% form_theme form '@MonsieurBizSyliusAdvancedOptionPlugin/Form/theme.html.twig' %}

<div class="ui segment">
    {{ form_errors(form) }}
    <div class="two fields">
        {{ form_row(form.code) }}
        {{ form_row(form.position) }}
    </div>
    {{ translationForm(form.translations) }}
</div>
<div class="ui segment">
    <h4 class="ui dividing header">{{ 'monsieurbiz_advanced_option.ui.rendering'|trans }}</h4>
    <div class="fields">
        {{ form_row(form.renderer) }}
    </div>
</div>
<h4 class="ui dividing header">{{ 'sylius.ui.values'|trans }}</h4>
{{ form_row(form.values) }}
